root = true

[*]
charset = utf-8
end_of_line = crlf
indent_style = tab
insert_final_newline = true
max_line_length = 300

[.editorconfig]
indent_size = 4
trim_trailing_whitespace = true

[*.{java,kt,kts,sql,xml}]
indent_size = 4
max_line_length = 300

[*.java]
ij_java_continuation_indent_size = 4

[*.{kt,kts}]
ij_kotlin_continuation_indent_size = 4
ij_kotlin_line_break_after_multiline_when_entry = false
trim_trailing_whitespace = true

[*.{md,yaml,yml}]
indent_style = space
indent_size = 2
